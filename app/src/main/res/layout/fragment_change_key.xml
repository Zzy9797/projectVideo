<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.kiyotaka.jetpackdemo.model.ChangeKeyViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_change_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/common_ic_back"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            android:textColor="@color/colorBlue"
            android:textSize="@dimen/txt_big_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            style="@style/LoginStyle2"
            android:layout_marginTop="35dp"
            android:orientation="horizontal"

            app:layout_constraintTop_toBottomOf="@+id/tv_change_cancel"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                app:srcCompat="@mipmap/logo2"

                />
            <TextView
                android:id="@+id/txt_login_zixun"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:text="远程心理咨询"
                android:textColor="@color/colorBlue"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
        <TextView
            android:id="@+id/txt_change_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:gravity="center"
            android:text="修 改 密 码"
            android:textColor="@color/black"
            android:textSize="27sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <LinearLayout
            android:id="@+id/et_change_name_lo"
            style="@style/CommonEditStyle"
            android:layout_marginTop="45dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/et_change_newpassword_lo"
            app:layout_constraintTop_toBottomOf="@id/txt_change_welcome"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="手机号: "
                android:textColor="@color/black"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_change_name"
                style="@style/CommonEditStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@drawable/edit_bg"
                android:hint="请输入手机号"
                android:inputType="number"
                android:onTextChanged="@{(text, start, before, count)->model.onAccountChanged(text)}"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/et_change_newpassword_lo"
            style="@style/CommonEditStyle"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/et_change_password_lo"
            app:layout_constraintTop_toBottomOf="@id/et_change_name_lo"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="旧密码: "
                android:textColor="@color/black"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_change_newpassword"
                style="@style/CommonEditStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@drawable/edit_bg"
                android:hint="请输入旧密码"
                android:inputType="text"
                android:onTextChanged="@{(text, start, before, count)->model.onPasswordChanged(text)}"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/et_change_password_lo"
            style="@style/CommonEditStyle"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/btn_change_submit"
            app:layout_constraintTop_toBottomOf="@id/et_change_newpassword_lo"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="新密码: "
                android:textColor="@color/black"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_change_password"
                style="@style/CommonEditStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@drawable/edit_bg"
                android:hint="请输入新密码"
                android:inputType="text"
                android:onTextChanged="@{(text, start, before, count)->model.onNewPasswordChanged(text)}"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="16sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_change_submit"
            style="@style/CommonButtonStyle"
            android:layout_width="223dp"
            android:layout_height="47dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/common_btn_bg_blue"
            android:drawablePadding="10dp"
            android:onClick="@{()->model.onSubmit()}"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/et_change_password_lo"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="56dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>