<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.kiyotaka.jetpackdemo.model.SuggestionViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.main.SuggestionFragment">

        <TextView
            android:id="@+id/tv_suggestion_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/common_ic_back"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_big_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_suggestion_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="建议反馈"
            android:textColor="@color/colorBlue"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <LinearLayout
            android:id="@+id/suggestion_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_border"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/txt_suggestion_welcome">

            <EditText
                android:id="@+id/suggestion_issue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="textMultiLine"
                android:minLines="6"
                android:scrollHorizontally="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/suggestion_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/ic_baseline_add_24" />

                <ImageView
                    android:id="@+id/suggestion_view1"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/suggestion_view2"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/suggestion_view3"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/suggestion_view4"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/suggestion_view5"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/suggestion_con_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/suggestion_lay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="填写您的联系方式："
                android:textColor="#000000" />

            <EditText
                android:id="@+id/suggestion_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="您的手机号码"
                android:textColor="#000000" />

        </LinearLayout>

        <Button
            android:id="@+id/suggestion_submit"
            style="@style/CommonButtonStyle"
            android:layout_width="223dp"
            android:layout_height="47dp"
            android:layout_marginTop="20dp"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/suggestion_con_lay"
            app:layout_goneMarginTop="20dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>