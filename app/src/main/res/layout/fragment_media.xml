<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.kiyotaka.jetpackdemo.model.MediaViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_media_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/common_ic_back"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            android:textColor="@color/colorBlue"
            android:textSize="@dimen/txt_big_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            style="@style/LoginStyle2"
            android:layout_marginTop="35dp"
            android:orientation="horizontal"

            app:layout_constraintTop_toBottomOf="@+id/tv_media_cancel"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                app:srcCompat="@mipmap/logo2"

                />
            <TextView
                android:id="@+id/txt_login_zixun"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:text="远程心理咨询"
                android:textColor="@color/colorBlue"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_media_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:gravity="center"
            android:text="来 电 铃 声"
            android:textColor="@color/black"
            android:textSize="27sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <LinearLayout
            android:id="@+id/et_media_name_lo"
            style="@style/CommonEditStyle"
            android:layout_marginTop="45dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/btn_media_submit"
            app:layout_constraintTop_toBottomOf="@id/txt_media_welcome"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="铃声: "
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_media_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:hint="请选择铃声"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:text="@{model.MP3Name}"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_media_submit"
            style="@style/CommonButtonStyle"
            android:layout_width="223dp"
            android:layout_height="47dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/common_btn_bg_blue"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="确认"
            android:onClick="@{() -> model.uploadMP3()}"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/et_media_name_lo"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="56dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>