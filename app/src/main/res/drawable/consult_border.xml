<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 先画一遍边框颜色 -->
    <item>
        <shape>
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>
    <!-- 再画背景颜色 并且设置需要边框边的margin为边框宽度 -->
    <item
        android:bottom="1dp">
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>